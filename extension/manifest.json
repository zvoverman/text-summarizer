{
    "manifest_version": 2,
    "name": "Text Summarizer",
    "version": "1.0",
    "description": "Summarize highlighted text on the web",
    "icons": {
        "48": "./icons/monstera-leaf.svg",
        "128": "./icons/monstera-leaf.svg"
    },
    "background": {
        "scripts": [
            "./src/background.js"
        ],
        "persistent": false,
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "./src/content.js"
            ]
        }
    ],
    "sidebar_action": {
        "default_icon": "./icons/monstera-leaf.svg",
        "default_panel": "./src/sidebar/sidebar.html",
        "open_at_install": true
    },
    "permissions": [
        "activeTab",
        "storage",
        "clipboardWrite"
    ]
}
